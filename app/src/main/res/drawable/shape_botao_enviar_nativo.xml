<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E9650A" />
            <gradient android:angle="-90" android:startColor="#D53604" android:endColor="#F1977B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B13109" />
            <solid android:color="#E6704A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#836D67" />
            <gradient android:angle="-90" android:startColor="#B99589" android:endColor="#7A5B51" />
        </shape>
    </item>
</selector>